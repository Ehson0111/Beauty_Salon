<Window x:Class="Beauty_Salon.AdminLoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Beauty_Salon"
        mc:Ignorable="d"
              Title="Вход администратора" Height="200" Width="300">
    <Grid Margin="10">
        <Label Content="Введите пароль:" HorizontalAlignment="Left" VerticalAlignment="Top" />
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,25,0,0" Width="200"/>
        <Button Content="Войти" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,25,0,0" Click="LoginButton_Click"/>
        <TextBlock x:Name="errorMessage" Foreground="Red" HorizontalAlignment="Center" VerticalAlignment="Bottom" />
    </Grid>
</Window>
