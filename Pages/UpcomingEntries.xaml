<Page x:Class="Beauty_Salon.Pages.UpcomingEntries"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Beauty_Salon.Pages"
      mc:Ignorable="d" 
      Title="UpcomingEntries">

    <Grid>
        <DataGrid Name="UpcomingEntriesDataGrid"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Услуга" Binding="{Binding ServiceName}" Width="*" />
                <DataGridTextColumn Header="ФИО клиента" Binding="{Binding ClientFullName}" Width="*" />
                <DataGridTextColumn Header="Email" Binding="{Binding ClientEmail}" Width="*" />
                <DataGridTextColumn Header="Телефон" Binding="{Binding ClientPhone}" Width="*" />
                <DataGridTextColumn Header="Дата и время" Binding="{Binding StartTime}" Width="*" />
                <DataGridTextColumn Header="Осталось времени" Binding="{Binding TimeLeft}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
